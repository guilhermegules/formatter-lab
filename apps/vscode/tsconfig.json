{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "outDir": "out",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@repo/json-utils": ["../../packages/json-utils"]
    }
  },
  "exclude": ["src/test"]
}
